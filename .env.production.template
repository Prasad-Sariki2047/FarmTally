# FarmTally Production Environment Configuration
# Copy this to .env.production and update with your secure values

# Database Configuration
POSTGRES_DB=farmtally_prod
POSTGRES_USER=farmtally_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Redis Configuration  
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_TO_SECURE_REDIS_PASSWORD@redis:6379

# Application Configuration
NODE_ENV=production
PORT=3000
DATABASE_URL=postgresql://farmtally_prod_user:CHANGE_THIS_TO_SECURE_PASSWORD@postgres:5432/farmtally_prod

# JWT Secret (generate a strong random string)
JWT_SECRET=CHANGE_THIS_TO_LONG_RANDOM_STRING

# External Services (configure as needed)
EMAIL_SERVICE_URL=
SMS_SERVICE_URL=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Logging
LOG_LEVEL=info

# Security
ENABLE_CORS=true
CORS_ORIGIN=http://147.93.153.247:3001,http://147.93.153.247:8082